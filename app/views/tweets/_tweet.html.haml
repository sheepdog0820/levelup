.tweet{data: {tweet: {id: tweet.id}}}
  .tweets__user-image
    = image_tag tweet.user.image.url,size: "100x100"    
  .tweets__main
    .tweets__main__user-date
      = tweet.user.name
      = tweet.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .tweets__main__content
      = tweet.content
    = image_tag tweet.image.url,size: "100x100",class: 'image' if tweet.image.present?
    = tweet.tag_list
    .tweets__main__icon
      = icon('far','heart')
      = icon('far','comment')